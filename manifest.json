{
    "manifest_version": 3,
    "name": "PDF Answer Finder",
    "version": "1.0.0",
    "description": "Find answers from your converted PDF study materials instantly. Right-click any question to search your notes offline.",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "answers.txt"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}